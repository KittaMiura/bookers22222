<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="error_explanation"><% if @user.errors.any? %>
  <h2><%= @user.errors.count %>件のエラーが発生しました</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>

      <%= form_with model: @user do |f| %>
      <div class="form-group"><label>Name</label></div>
      <div class="form-group"><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control introduction" %></div>
      <div class="form-group"><label>Image</label></div>
      <div class="form-group"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
      <div class="form-group"><label>Introduction</label></div>
      <div class="form-group"><%= f.text_area :introduction, autofocus: true, id:"body", placeholder:"introduction", class: "form-control introduction" %></div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>
    </div>
  </div>
</div>

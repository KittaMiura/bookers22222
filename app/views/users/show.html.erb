<div class="container mt-3">
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <table class="table">
          <h2 class="mt-3">User info</h2>
            <tbody>
              <tr></tr>
              <tr>
                <%= image_tag @user.get_profile_image(100,100) %>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
              <th>introduction</th>
              <th><%= @user.body %></th>
              </tr>
              <tr></tr>
            </tbody>
        </table>
          <%= link_to "Edit", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_48361" %>
          <%= form_with model: @book do |f| %>
          <h2 class="mt-3">New book</h2>
          <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "book_title" %>
          </div>
          <div class="form-group">
            <p>Opinion</p>
            <%= f.text_field :text, class: "book_opinion" %>
          </div>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
          <% @books.each do |book| %>
         <tbody>
          <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
      <td><%= book.text %></td>
    </tbody>
    <% end %>
      </table>
      </div>

</div>



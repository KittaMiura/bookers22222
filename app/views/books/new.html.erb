<%= link_to "Edit", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_48361" %>
          <%= form_with model: @book do |f| %>
          <h2 class="mt-3">New book</h2>
          <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "book_title" %>
          </div>
          <div class="form-group">
            <p>Opinion</p>
            <%= f.text_field :text class: "book_text" %>
          </div>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>